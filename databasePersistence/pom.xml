<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>gov.nasa.arc.mct</groupId>
	<artifactId>databasePersistence</artifactId>
	<name>Database Persistence Module</name>
	<version>${mct.platform.version}</version>
	<parent>
		<artifactId>mct-superpom</artifactId>
		<groupId>mct</groupId>
		<version>2.0.1</version>
		<relativePath>../superpom</relativePath>
	</parent> 
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<configuration>
					<archive>
						<manifestFile>META-INF/MANIFEST.MF</manifestFile>
					</archive>
				</configuration>
			</plugin>
			<plugin>
  			<groupId>org.apache.maven.plugins</groupId>
  			<artifactId>maven-dependency-plugin</artifactId>
  			<executions>
  				<execution>
  					<id>copy-embedded-dependencies</id>
  					<phase>compile</phase>
  					<goals>
  						<goal>copy-dependencies</goal>
  					</goals>
  					<configuration>
  						<includeScope>runtime</includeScope>
  						<excludeGroupIds>org.slf4j,gov.nasa.arc.mct,xml-apis</excludeGroupIds>
  						<excludeArtifactIds>log4j</excludeArtifactIds>
  						<outputDirectory>${project.build.outputDirectory}</outputDirectory>
  					</configuration>
  				</execution>
  			</executions>
  		</plugin>  	 
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>gov.nasa.arc.mct</groupId>
  			<artifactId>mctcore</artifactId>
  			<version>${mct.platform.version}</version>
  			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-entitymanager</artifactId>
			<version>4.0.1.Final</version>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-c3p0</artifactId>
			<version>4.0.1.Final</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.hibernate</groupId>
			<artifactId>hibernate-ehcache</artifactId>
			<version>4.0.1.Final</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derby</artifactId>
			<version>10.8.2.2</version>
			<scope>runtime</scope>
		</dependency>
		<dependency>
	  		<groupId>gov.nasa.arc.mct</groupId>
	  		<artifactId>tests</artifactId>
	  		<version>${mct.platform.version}</version>
	  		<scope>test</scope>
  		</dependency>
		<dependency>
			<groupId>org.apache.derby</groupId>
			<artifactId>derbyclient</artifactId>
			<version>10.8.2.2</version>
			<scope>runtime</scope>
		</dependency>
  		<dependency>
  			<groupId>mysql</groupId>
        	<artifactId>mysql-connector-java</artifactId>
        	<version>5.1.16</version>
        	<scope>runtime</scope>
    	</dependency>
	</dependencies>
</project>
